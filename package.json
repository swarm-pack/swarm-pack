    "is-url": "^1.2.4",
    "js-yaml": "^3.12.1",
    "lodash": "^4.17.11",
    "md5": "^2.2.1",
    "nexe": "^3.0.0-beta.15",
    "nunjucks": "^3.1.7",
    "pkg": "^4.3.7",
    "sanitize-filename": "^1.6.1",
    "shelljs": "^0.8.3",
    "simple-git": "^1.107.0",
